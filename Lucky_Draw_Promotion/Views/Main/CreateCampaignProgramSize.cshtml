
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Create Campaign: Program size</title>
    <link href="~/Content/styles.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" />
</head>
<body style="background-color: #ccccff">
    <div>
        <div id="menu">
            <ul>
                <li><img src="~/Images/logo.png" width="64" height="64" /></li>
                <li><a href="@Url.Action("Dashboard","Main")"><i class="fas fa-home"></i><br />Dashboard</a></li>
                <li><a href="@Url.Action("CampaignManagement","Main")"><i class="fas fa-tags"></i><br />Campaign</a></li>
                <li><a href="#"><i class="fas fa-gift"></i><br />Gift</a></li>
                <li><a href="#"><i class="fas fa-user"></i><br />Customer</a></li>
                <li><a href="#"><i class="fas fa-gear"></i><br />Setting</a></li>
            </ul>
        </div>
        <div class="search-text">
            <input type="search" name="Tìm kiếm" placeholder="Search..." />
            <a href="#" class="search-button">
                <i class="fas fa-search"></i>
            </a>
        </div>
        <div id="title1">
            <h6>&nbsp;<i class="fas fa-home"><span style="color:#6600cc"> Dashboard&nbsp;/ Campaign </span>/ Create New Campaign</i></h6>
        </div>

        <div id="B">
            <div id="title2">
                <h5>&nbsp;<i class="fas fa-tags"> Create New Campaign</i></h5>
            </div>
        </div>
        <div id="title-campaign">1. Program size</div>
        <div class="data-new-campaign">
            <div class="choose-code">
                <input name="code" type="radio" value="Bulk codes" />&emsp;<i class="fas fa-clone"></i>   Bulk codes
                &emsp;&emsp;&emsp;&emsp;&emsp;
                <input name="code" type="radio" value="Standalone code" />&emsp;<i class="fas fa-sticky-note"></i>   Standalone code
            </div>
            <div class="blank"></div>
            <p>Program name *</p>
            <div id="txt-program-name">
                <input type="text" name="program_name" placeholder="" class="col-md-5 py-2" />
            </div>
            <div id="checkbox-auto">
                <input type="checkbox" name="auto-update" />&emsp; Auto Update
            </div>
            <br />
            <div>
                <input type="checkbox" name="customers" />&emsp; Customers will be allowed to join campaign only one
            </div>
            <div id="txt-description">
                <input type="text" name="description" placeholder="Description" class="col-md-12 py-2" />
            </div>
            <br />
            <p>Code usage limit</p>
            <div id="code-usage-limit">
                <input type="text" name="code-limit" placeholder="" class="col-md-5 py-2" />
            </div>
            <div id="checkbox-unlimited">
                <input type="checkbox" name="unlimited" />&emsp; Unlimited
            </div>
            <div id="name-code-count">Code count *</div>
            <div id="code-count">
                <input type="text" name="code-count" placeholder="" class="col-md-5 py-2" />
            </div>
            <br />
            <div>Charset</div>
            <select id="select-charset">
                <option>Numbers</option>
                <option>Alphabets</option>
            </select>
            <div id="txt-charset">
                <input type="text" name="charset" placeholder="123456789" class="col-md-5 py-2" />
            </div>
            <br /><br />
            <div>Code length</div>
            <div id="code-length">
                <input type="text" name="code-length" placeholder="" class="col-md-5 py-2" />
            </div>
            <div id="prefix">Prefix</div>
            <div id="txt-prefix">
                <input type="text" name="prefix" placeholder="ALTA" class="col-md-5 py-2" />
            </div>
            <div id="postfix">Postfix</div>
            <div id="txt-postfix">
                <input type="text" name="postfix" placeholder="" class="col-md-5 py-2" />
            </div>
        </div>

        <div id="name-campaign">New Campaign</div>
        <div class="list-new-campaign">
            <button id="btnNumber1">1</button>&emsp;&emsp;<span style="color: #993399; font-weight: bold">Program size</span>
            <div style="text-align: justify">
                &emsp;&emsp;&emsp;<span style="font-weight: bold">. Bulk codes </span>- up to thousands of random discount codes designed for single use
                by a limited group of customers (e.g., "ACME-5P13R" give $25 off for the first 3 purchases, new customers from Warsaw only).
            </div>
            <br />
            <div style="text-align: justify">
                &emsp;&emsp;&emsp;<span style="font-weight: bold">. Standalone codes </span> - A fixed-code discount designed for multiple uses (e.g., 10%
                off with "<u>blackfriday</u>" code).
            </div>
            <button id="btn-next-step-1">
                <a href="@Url.Action("CreateCampaignTimeFrame","Main")" style="text-decoration: none; color: #fff">Next step</a>
            </button>
            <br /><br />
            <button id="btnNumber">2</button>&emsp;&emsp;Time frame <br />
            <button id="btnNumber">3</button>&emsp;&emsp;Gifts <br />
            <button id="btnNumber">4</button>&emsp;&emsp;Rules for gifts <br />
            <button id="btnNumber">5</button>&emsp;&emsp;Summary <br />
            <hr />
            <button id="cancel"><img src="~/Images/icons8-xbox-x-24.png" /> Cancel</button>
            <button id="save-draft">Save draft</button>
        </div>
    </div>
</body>
</html>
