
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Login</title>
    <link href="~/Content/styles.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" />
</head>
<body>
    <div id="layout-customer">
        <div><img src="~/Images/unilever-logo.png" style="width: 100%;"/></div>
        <br />
        <div class="login-user">
            <div class="input-box">
                <input type="text" name="phone" placeholder="Số điện thoại" class="col-md-12 py-2" />
            </div>    
            <br />
            <div class="input-box">
                <input type="password" name="password" placeholder="Mật khẩu" id="myPassword" class="col-md-12 py-2" />
                <span class="eye" onclick="myFunction()">
                    <i id="hide1" class="fas fa-eye"></i>
                    <i id="hide2" class="fas fa-eye-slash"></i>
                </span>
            </div>
            <br />
            <a href="@Url.Action("ForgotPassword","Customer")" style="color: darkorange;"><u>Quên mật khẩu?</u></a>
            <br /><br />
            <button id="btn-dangnhap">Đăng nhập</button>
            <br /><br />
            <div style="text-align: center">
                <a href="@Url.Action("Register","Customer")" style="color: darkorange;"><u>Đăng ký</u></a>
            </div>
        </div>       
    </div>

    <script>
        function myFunction() {
            var x = document.getElementById("myPassword");
            var y = document.getElementById("hide1");
            var z = document.getElementById("hide2");

            if (x.type === 'password') {
                x.type = "text";
                y.style.display = "block";
                z.style.display = "none";
            }

            else {
                x.type = "password";
                y.style.display = "none";
                z.style.display = "block";
            }
        }
    </script>
</body>
</html>
